@page
@model Client.Pages.Account.EmailConfirmation

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>
<body>
@if (Model.Success)
{
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">Email подтвержден!</h1>
        <div class="col-lg-6 mx-auto">
            <a class="" asp-page="/Account/Edit">К заполнению профиля</a>
        </div>
    </div>
}
else
{
    <div class="px-4 py-5 my-5 text-center">
        <h1 class="display-5 fw-bold">Ошибка</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4">Ссылка для подтверждения некорректна или истекла. Пройдите регистрацию снова.</p>
            <a class="" asp-page="/Account/Login">Авторизация</a>
        </div>
    </div>
}

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>