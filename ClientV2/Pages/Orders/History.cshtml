@page "{handler?}"
@model ClientV2.Pages.Orders.History

@{
    ViewData["Title"] = "История заказов";
}
<body>
<div class="container">
    <div class="content__wrapper">
        <div class="basket-wrapper basket-wrapper_height_full">
            <div class="basket">
                @foreach (var order in Model.UserOrders)
                {
                    <div class="basket__dish">
                        <img class="basket__dish-img" src="~/images/dish.png"/>
                        <div class="basket__dish-middle">
                            <span class="basket__dish-name">Комбо набор №1</span>
                            <div class="basket__dish-order-date">01.12.2022</div>
                        </div>
                        <div class="basket__dish-end">
                            <span class="basket__top-right-area">240 ₽</span>
                            <span class="basket__dish-price">240 ₽</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="js/uploadDishes.js" asp-append-version="true"></script>
</body>
