@model List<ClientV2.Apis.OptionDto>

@foreach (var item in Model)
{
    <div class="dish-container__dish" id="@item.Id.ToString()">
        <div class="dish-container__dish-description">@item.Name</div>
        <div class="d-flex align-items-center justify-content-end">
            <span class="dish-container__dish-price me-2">@item.Price.ToString()</span>
            <button class="btn btn-sm btn-danger btn-danger-custom me-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                </svg>
            </button>
        </div>
    </div>
}
